<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>nuevaPublicacion</servlet-name>
        <servlet-class>Servlet.nuevaPublicacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registroPublicacion</servlet-name>
        <servlet-class>Servlet.registroPublicacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminarPublicacion</servlet-name>
        <servlet-class>Servlet.eliminarPublicacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificarPublicacion</servlet-name>
        <servlet-class>Servlet.modificarPublicacion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>nuevaPublicacion</servlet-name>
        <url-pattern>/nuevaPublicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registroPublicacion</servlet-name>
        <url-pattern>/registroPublicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminarPublicacion</servlet-name>
        <url-pattern>/eliminarPublicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificarPublicacion</servlet-name>
        <url-pattern>/modificarPublicacion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
